    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Simple ls command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/main.go",
            "args": [
                "-c",
                "${workspaceFolder}/example/config.json",
                "ls",
                "common-files/*",
            ]
        },
        {
            "name": "Debug wget command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/main.go",
            "args": [
                "-c",
                "${workspaceFolder}/example/config.json",
                "wget",
                "-f",
                "common-files/test.txt",
            ]
        },        
        {
            "name": "Debug pol command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/main.go",
            "args": [
                "-c",
                "${workspaceFolder}/example/config.json",
                "pol",
            ]
        },
    ]
}